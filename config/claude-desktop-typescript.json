{
  "mcpServers": {
    "openapi-connector-ts": {
      "command": "tsx",
      "args": ["/path/to/mcp-openapi-connector/src/mcp-openapi-connector.ts"],
      "cwd": "/path/to/mcp-openapi-connector",
      "env": {
        "CLIENT_ID": "test-client",
        "CLIENT_SECRET": "test-secret", 
        "API_BASE_URL": "https://api.example.com",
        "AUTH_PATH": "/oauth/token",
        "OPENAPI_SPEC_PATH": "/path/to/mcp-openapi-connector/config/openapi-example.json",
        "OPENAPI_TOOL_PREFIX": "api_"
      }
    }
  }
}